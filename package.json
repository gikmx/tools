{
    "name": "@gik/tools",
    "version": "0.2.1",
    "description": "Meta package for GIK's toolbelt",
    "license": "MIT",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx> (http://hectormenendez.com)"
    ],
    "keywords": [
        "tools",
        "util",
        "utilities",
        "tool"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/gikmx/tools"
    },
    "bugs": {
        "url": "https://github.com/gikmx/tools/issues"
    },
    "engines": {
        "node": ">=6.11.3",
        "npm": ">=5.4.2"
    },
    "main": "lib/index.js",
    "directories": {
        "test": "./test",
        "src": "./doc-src",
        "out": "./lib"
    },
    "scripts": {
        "ver:commit": "gik-npm version:patch",
        "docs:lint": "gik-npm docs:lint",
        "docs": "npm run docs:lint -s && gik-npm docs",
        "build": "git submodule foreach 'npm i && npm run build -s && npm run test -s'",
        "prePublishOnly": "npm run docs -s"
    },
    "dependencies": {
        "@gik/tools-checker": "0.0.8",
        "@gik/tools-logger": "0.0.4",
        "@gik/tools-mapper": "0.0.3",
        "@gik/tools-populator": "0.0.2",
        "@gik/tools-streamer": "0.0.4",
        "@gik/tools-thrower": "^0.1.9"
    },
    "devDependencies": {
        "@gik/eslint-config": "0.0.3",
        "@gik/npm": "0.0.29",
        "nodemon": "^1.12.1"
    }
}
